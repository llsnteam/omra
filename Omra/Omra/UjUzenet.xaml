        <TextBox x:Name="tartalom_txb" HorizontalAlignment="Left" Height="166" Margin="10,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="346"/>
        <Button Click="UjUzenet_Click" Content="Küldés" HorizontalAlignment="Left" Margin="59,317,0,0" VerticalAlignment="Top" Width="104" Style="{StaticResource BigButton}"/>
        <Button Click="CimzettKeres_Click" Content="Keresés" HorizontalAlignment="Left" Margin="237,15,0,0" VerticalAlignment="Top" Width="90" Style="{StaticResource BigButton}" Height="21"/>
