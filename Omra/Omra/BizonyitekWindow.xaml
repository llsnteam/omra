<Window x:Class="Omra.BizonyitekWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bizonyíték" Height="190" Width="300">
    <Grid Background="{StaticResource hatter}">
        <Label Content="Megnevezés:" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="megnevezes_txb" HorizontalAlignment="Left" Height="23" Margin="123,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Mentés" HorizontalAlignment="Left" Margin="26,118,0,0" VerticalAlignment="Top" Width="100" Click="Mentes_Click" Style="{StaticResource BigButton}"/>
        <Button Content="Vissza" HorizontalAlignment="Left" Margin="144,118,0,0" VerticalAlignment="Top" Width="99" Click="Vissza_Click" Style="{StaticResource BigButton}"/>
        <DatePicker x:Name="datepicker" HorizontalAlignment="Left" Margin="123,66,0,0" VerticalAlignment="Top" Width="120" Height="26" IsEnabled="False"/>
        <Label Content="Fevétel dátuma:" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="108"/>

    </Grid>
</Window>
