<Window x:Class="Omra.BunesetAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BunesetAblak" Height="331.547" Width="891.085">
    <Grid>
        <Label Content="Felelős őrnagy:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="felorn_txb" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="104,14,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Click="FelelosOrnagyKereses_Click" Content="Keresés" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Margin="126,42,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Leírás:" HorizontalAlignment="Left" Margin="13,96,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="leiras_txb" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Height="139" Margin="61,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="209"/>
        <Button Click="Mentes_Click" Content="Mentés" HorizontalAlignment="Left" Margin="75,254,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Vissza_Click" Content="Vissza" HorizontalAlignment="Left" Margin="178,254,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox Name="ListboxGyanúsítottak" HorizontalAlignment="Left" Height="228" Margin="369,10,0,0" VerticalAlignment="Top" Width="195"/>
        <Label Content="Gyanúsítottak:" HorizontalAlignment="Left" Margin="278,10,0,0" VerticalAlignment="Top"/>
        <Button Click="GyanusitottFelvetel_Click" Content="Keresés" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Margin="369,254,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Bizonyítékok:" HorizontalAlignment="Left" Margin="582,10,0,0" VerticalAlignment="Top"/>
        <ListBox Name="ListboxBizonyítékok" HorizontalAlignment="Left" Height="228" Margin="667,10,0,0" VerticalAlignment="Top" Width="195"/>
        <Button Click="BizonyitekFelvetel_Click" Content="Keresés" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Margin="667,254,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="UjGyan_Click" Content="Új gyanúsított" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Margin="481,254,0,0" VerticalAlignment="Top" Width="83"/>
        <Button Click="UjBiz_Click" Content="Új bizonyíték" IsEnabled="{Binding ElementName=allapot_cbx, Path=IsChecked}" HorizontalAlignment="Left" Margin="782,254,0,0" VerticalAlignment="Top" Width="80"/>
        <CheckBox Name="allapot_cbx" Content="Folyamatban" HorizontalAlignment="Left" Margin="63,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Állapot:" HorizontalAlignment="Left" Margin="13,68,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
